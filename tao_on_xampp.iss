[code]

function NextButtonClick(CurPageID: Integer): Boolean;
begin
  Result := True;
  if CurPageID = wpSelectDir then begin
    if ((Pos(' ',WizardForm.DirEdit.Text) > 0) 
      or (Pos('/',WizardForm.DirEdit.Text) > 0)
      or (Pos('-',WizardForm.DirEdit.Text) > 0)
      or (Pos('.',WizardForm.DirEdit.Text) > 0)
      or (Pos('[',WizardForm.DirEdit.Text) > 0)
      or (Pos(']',WizardForm.DirEdit.Text) > 0)
      or (Pos('!',WizardForm.DirEdit.Text) > 0)
      or (Pos('{',WizardForm.DirEdit.Text) > 0)
      or (Pos('}',WizardForm.DirEdit.Text) > 0)
      or (Pos('''',WizardForm.DirEdit.Text) > 0)
    )
    then 
      begin
        Result := False;
        MsgBox('TAO do not support special character such as spaces . / - [ ] { } in its home directory ' + WizardForm.DirEdit.Text, mbError, MB_OK)
      end;

  end;
end;

function CheckPortOccupied(Port:String):Boolean;
  var
    ResultCode: Integer;
  begin
   Exec(ExpandConstant('{cmd}'), '/C netstat -na | findstr'+' /C:":'+Port+' "', '',0,ewWaitUntilTerminated, ResultCode);
    if ResultCode  <> 1 then 
    begin
      Log('this port('+Port+') is occupied');
      Result := True; 
    end else
    begin
      Result := False;
    end;
  end;